[include]
	path = .gitconfig.local
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less
[color]
	ui = auto
[branch]
	autosetuprebase = always
[fetch]
	prune = true
[merge]
	ff = false
[pull]
	rebase = true
[push]
	default = simple
	followTags = true
[rebase]
	autosquash = true
[submodule]
	recurse = true
[status]
	showUntrackedFiles = all
[url "https://github.com/"]
	insteadOf = git://github.com/
[url "git@github.com:"]
	pushInsteadOf = git://github.com/
	pushInsteadOf = https://github.com/
[alias]
	a = add
	aa = !git add --all && git status
	aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\\t => \\2/' | sort
	amend = commit --amend --verbose
	b = branch --verbose
	ba = branch --all --verbose
	branches = branch --all --verbose
	ci = commit --verbose
	co = checkout
	d = diff
	dc = diff --cached
	delete-merged = "!f() { git branch --merged ${1:-master} | grep -v -e ${1:-master}$ -e master$ -e develop$ | xargs -n 1 -r git branch -d; }; f"
	di = diff
	dic = diff --cached
	discard = checkout --
	f = fetch
	fa = fetch --all
	fixup = commit --amend -C HEAD
	info = remote show origin
	remotes = remote -v
	sb = show-branch --all
	sh = show
	shallow-clone = clone --depth 1
	st = status
	stashes = !tig stash
	sync-upstream = !git fetch --all && git checkout master && git merge --ff-only origin/master && git push $USER master
	tags = tag
	this = !git init && git add --all && git commit -m 'Initial commit'
	uncommit = reset --soft HEAD~
	unstage = reset -q HEAD --
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
